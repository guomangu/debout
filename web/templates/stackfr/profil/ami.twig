{% block content %}

{% include "stackfr/gens/menu.twig" %}


{# //////////////////// #}
{# Si l'utilisateur est connecté, récupérer ses informations #}
{% set emailDepuisCookie = craft.app.session.get('loggedInGensId') %}

{# Vérifier si l'utilisateur est connecté #}
{% if emailDepuisCookie is not null %}
    {% set user = craft.entries().id(emailDepuisCookie).one() %}
{# {% else %}
    {% set user = craft.entries().id(257).one() %} #}
{% endif %}
{# ///////////////////// #}

{% if craft.app.request.getSegment(2) %}
    {% set iduser = craft.app.request.getSegment(2) %}
    {% set userAMI = craft.entries().id(iduser).one() %}
{% endif %}

<div class="container mt-4">
{% if userAMI %}
    <span>Profil de <h3 style="display: contents;">{{ userAMI.title }}</h3><br></span>    
<div><br></div>
{% set a = craft.entries()
    .section('active')
    .gens(userAMI.id)
    .relatedTo({
        targetElement: craft.entries().type('caracteristique'),
        field: 'obj'
    })
    .limit(99)
    .orderBy('dateCreated DESC')
    .all() %}






{% if a %}

{% for item in a %}
    <div class="card card-body mb-3">
   <h3>{{item.obj[0].title}}
    <span><a href="/caracteristique/{{ item.obj[0].id }}"><button class="btn btn-secondary">Voir</button></a></span>  
   </h3>

   {# {% set a = craft.entries()
    .section('tagg')
    .caracteristique(item.obj[0].id)
    .limit(99)
    .orderBy('dateCreated DESC')
    .all() %} #}

    {% include "stackfr/tagg/taggAMI.twig" with {
                'user': user,
                'userAMI': userAMI,
                'cara': item.obj[0],
    } %}
    </div>
{% endfor %}

{% endif %}





{% endif %}
</div>



{% endblock %}
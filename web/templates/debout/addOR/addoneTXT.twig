                </svg>
                Ajouter du texte
            </button>
        </form>





        <button type="button" class="btn btn-secondary" onclick="document.getElementById('add-overlaytxt111OR').style.display='none';">
            Annuler
        </button>
    </div>
</div>




















<script>    
    function addonetxtOR(id,or,orapres) {
        // 1. On sélectionne le calque de chargement grâce à son nouvel id
        const loadingOverlay = document.getElementById('add-overlaytxt111OR');

        // S'il n'existe pas, on arrête le script pour éviter des erreurs
        if (!loadingOverlay) {
            return;
        }
        loadingOverlay.style.display = 'block';

        document.getElementById('obj11111or').value=id;



        if (orapres == "pre") {
            tres=parseInt(or)/2;
        } else if (orapres == "post") {
            tres=parseInt(or)*2;
        } else if (orapres == "start") {
            tres=2000;
        }else{
            // 1010-1000 10
            var uno=parseInt(orapres)-parseInt(or);
            // 10/2
            var dos=uno/2
            // 1000+5
            var tres=parseInt(or+dos);
        }
                
        document.getElementById('or').value=tres;

        document.getElementById('title11').value='Textedoc pour ' + id;
    }
</script>
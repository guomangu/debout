{% block content %}

{# tag, vers, user #}

{% set art = craft.entries()
    .section('artvers')
    .tagg(tag.tagg[0].id)
    .limit(9)
    .orderBy('dateCreated DESC')
    .all() %}

{# article #}

{% for item in art %}
    {% set txts = craft.entries()
    .section('texte')
    .obj(item.article[0].id)
    .orderBy('or ASC')
    .all() %}

    {% set stop = false %}


    {% for texte in txts %}
        {% set vali = craft.entries()
        .section('valide')
        .obj(texte.id)
        .gens(user.id)
        .one() %}


        {% if vali == null and stop == false %}
            <div style="text-align: right; border-right-style: outset; padding:5px;">
                {{texte.title}} 

                <form method="post" accept-charset="UTF-8" enctype="multipart/form-data">
                    {{ csrfInput() }}
                    {{ actionInput('guest-entries/save') }}
                    {{ hiddenInput('sectionId', 19) }} 
                    {{ hiddenInput('enabled', '1') }}

                    <div class="mb-3">
                        <input id="title11" type="hidden" name="title" class="form-control" required value="validation de {{texte.title}}">
                    </div>

                    <div class="mb-3">
                        <input id="obj11111" type="hidden" name="fields[obj][]" class="form-control" required value="{{texte.id}}">
                    </div>

                    <div class="mb-3">
                        <input id="user11" type="hidden" name="fields[gens][]" class="form-control" required value="{{ user.id }}">
                    </div>

                    <div class="mb-3">
                        <input id="ver" type="hidden" name="fields[version][]" class="form-control" required value="{{ vers.id }}">
                    </div>

                    <button type="submit" class="btn btn-outline-secondary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill me-2" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
                        </svg>
                        Valid√©!
                    </button>
                </form>
            </div>
            <br>
            {% set stop = true %}
        {% endif %}
    {% endfor %}
{% endfor %}
{# txt #}

{% endblock %}